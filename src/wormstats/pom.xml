<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>de.bedit.gaming</groupId>
    <artifactId>wormstats</artifactId>
    <version>1.0-SNAPSHOT</version>
    <packaging>pom</packaging>
    <name>wormstats</name>
    
    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    </properties>
    
    <pluginRepositories>
        <pluginRepository>
            <id>maven.java.net</id>
            <name>Java.net Maven2 Repository</name>
            <url>http://download.java.net/maven/2</url>
        </pluginRepository>
    </pluginRepositories>
    
    <profiles>
        <profile>
            <id>benjamin</id>
            <properties>
                <glassfish.home>/opt/glassfish-3.1.1/</glassfish.home>
                <glassfish.domain.name>domain1</glassfish.domain.name>
                <glassfish.domain.http.port>8080</glassfish.domain.http.port>
                <glassfish.domain.admin.port>4848</glassfish.domain.admin.port>
                <glassfish.user.name>admin</glassfish.user.name>
                <glassfish.user.password>admin</glassfish.user.password>
            </properties>
        </profile>
        <profile>
            <id>stratocaster-dev</id>
            <properties>
                <glassfish.home>/opt/glassfish-3.1.1/</glassfish.home>
                <glassfish.domain.name>wormstats-dev</glassfish.domain.name>
                <glassfish.domain.http.port>9080</glassfish.domain.http.port>
                <glassfish.domain.admin.port>9048</glassfish.domain.admin.port>
                <glassfish.user.name>admin</glassfish.user.name>
                <glassfish.user.password>benjamin</glassfish.user.password>
            </properties>
        </profile>
    </profiles>
  
    <build>
        <plugins>
            <plugin>
                <groupId>org.glassfish.maven.plugin</groupId>
                <artifactId>maven-glassfish-plugin</artifactId>
                <version>2.1</version>
                <configuration>
                    <glassfishDirectory>${glassfish.home}</glassfishDirectory>
                    <autoCreate>true</autoCreate>
                    <debug>true</debug>
                    <user>${glassfish.user.name}</user>
                    <adminPassword>${glassfish.user.password}</adminPassword>
                    <domain>
                        <name>${glassfish.domain.name}</name>
                        <httpPort>${glassfish.domain.http.port}</httpPort>
                        <adminPort>${glassfish.domain.admin.port}</adminPort>
                    </domain>
                    <components>
                        <component>
                            <name>wormstats</name>
                            <artifact>wormstats-ear/target/wormstats-ear-1.0-SNAPSHOT.ear</artifact>
                        </component>
                    </components>
                </configuration>
            </plugin>
        </plugins>
    </build>
  
    <modules>
        <module>wormstats-ear</module>
        <module>wormstats-web</module>
        <module>persistence-ejb</module>
        <module>application-ejb</module>
    </modules>
    <reporting>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-checkstyle-plugin</artifactId>
                <configuration>
                    <configLocation>config/sun_checks.xml</configLocation>
                </configuration>
            </plugin>
        </plugins>
    </reporting>
</project>